<div class="row changelog-entry">
    <div class="col">
        <div class="row header">
            <div class="col">
                <h4>@Entry.Title</h4>
            </div>
        </div>
        <div class="row content">
            <div class="col">
                <div class="row">
                    <div class="col">
                        <p>
                            @Entry.Description
                        </p>
                    </div>
                </div>
                @if (Entry.Additions.Count != 0)
                {
                    <div class="row">
                        <div class="col">
                            <h6>Added</h6>
                            <ul>
                                @foreach (string c in Entry.Additions)
                                {
                                    <li>@c</li>
                                }
                            </ul>
                        </div>
                    </div>
                }
                @if (Entry.Removals.Count != 0)
                {
                    <div class="row">
                        <div class="col">
                            <h6>Removed</h6>
                            <ul>
                                @foreach (string c in Entry.Removals)
                                {
                                    <li>@c</li>
                                }
                            </ul>
                        </div>
                    </div>
                }
                @if (Entry.Changes.Count != 0)
                {
                    <div class="row">
                        <div class="col">
                            <h6>Changes</h6>
                            <ul>
                                @foreach (string c in Entry.Changes)
                                {
                                    <li>@c</li>
                                }
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {

    [Parameter]
    public ChangelogEntryData Entry { get; set; }
}